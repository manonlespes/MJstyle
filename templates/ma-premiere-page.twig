{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				<h1 class="article-h1">{{post.title}}</h1>
				<div class="article-body">
					{{post.content}}
				</div>
				<div>
					<img src="{{ post.thumbnail.src }}" />
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}