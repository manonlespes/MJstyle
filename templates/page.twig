{% set title_block = post.custom.flash_info %}


{% set quote = post.custom.fields.personnalised_quote %}
{% set image_quote = post.custom.fields.quote_background.guid%}
{% set author = post.custom.fields.author %}
{% set image_quote_title = post.custom.fields.quote_background._wp_attachment_image_alt %}

{% set titre = post.custom.fields.titre %}
{% set text1 = post.custom.fields.text_1 %}
{% set text2 = post.custom.fields.text_2 %}
{% set image = post.custom.fields.pictures_presentation.guid %}
{% set image_title = post.custom.fields.pictures_presentation._wp_attachment_image_alt %}
{% set link = post.custom.fields.btn_link_presentation %}
{% set text_link = post.custom.fields.call_to_action_btn_presentation %}


{% extends "base.twig" %}

{# 	je suis dans la page.twig #}

{% block content %}

	{# 	<pre>
		{{ dump(post) }}
	</pre> #}


	<article class="container">

		{% if quote %}
			{% include "quote.twig"%}
		{% endif %}

		{% if titre %}
			<div class="separator">{{titre}}</div>

			<div class="container__content">
				<div class="block block__presentation">
					<p>{{text1}}</p>
					<div class="wp-block-buttons">
						<a href="{{link}}" target="_blank" rel="noopener noreferrer" class="is-style-as-link-button">{{text_link}}</a>
					</div>
					<p>{{text2}}</p>
				</div>

				<div>
					<img src="{{image}}" alt="{{image_title}}">
				</div>

			</div>

		{% endif %}


	</article>


{% endblock %}
