					{% if is_preview %}
						<p>I will only appear in the editor.</p>
					{% endif %}

					{% for item in post.custom.fields %}
						<div id={{item.id}} class="ici">
							<p>{{ item }}</p>
						</div>
					{% endfor %}

					{% for my_article in articles %}

						{{post.content}}
					{% endfor %}
					
				</div>
			</section>
